<% @posts.each do |post| %>
  <%= render partial: "post", locals: {post: post} %>
<% end %>

<script>
  $(function(){
    $('.js-more').on('click', function(){
      let id = $(this).data("id");
      $.get("/posts/" + id + "/body", function(data){
        $(`#body-${id}`).text(data);
        // or $("#body-" + id).text(data);
      });
    });
  });
</script>